<div id="app"></div>
<%= form_for(@photo) do |f| %>

<div class="form-group">  <%= f.file_field :image %></div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class= "form-group">
    <%= f.label :category %>
    <%= f.collection_select :category, Category.all, :id, :name %>
  </div>

  <%= f.hidden_field :coordinates %>
  <input type="hidden" id="coordinates" name="coordinates" value= "<%=params["coordinates"]%>"/>

  <%= f.submit "Post", class: 'btn btn-primary form_button' %>
  <% end %>
</div>
