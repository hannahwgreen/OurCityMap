<div id="app"></div>
<%= form_for(@photo) do |f| %>

  <%= f.file_field :image %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <%= f.hidden_field :coordinates %>
  <input type="hidden" id="coordinates" name="coordinates" value= "<%=params["coordinates"]%>"/>

  <%= f.submit "Post", class: 'btn btn-primary' %>
  <% end %>
</div>
